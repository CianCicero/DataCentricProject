<a href="/">Home</a>

<table>

    <tbody>
        <tr>
            <th>SID</th>
            <th>Location</th>
            <th>Manager</th>
            <th>Edit / Delete</th>
        </tr>

        <% stores.forEach(function(store) { %>
        <tr>
            <td><%= store.sid %></td>
            <td><%= store.location %></td>
            <td><%= store.mgrid %></td>
            <td>
                <a href="/stores/edit/<%= store.sid %>">Edit</a>
                <form action="/stores/delete/<%= store.sid %>" method="POST" style="display: inline;">
                    <button type="submit" onclick="return confirm('Are you sure you want to delete this store?');" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
        <% }); %>
    </tbody>

</table>

<a href = "/stores/add">Add Store</a>